<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".MainActivity">

    <!-- 1. QR Code Display Area (Placeholder) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/qrCodeCard"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintVertical_bias="0.35"
        app:layout_constraintBottom_toTopOf="@+id/textButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/qr_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
        <!-- In a real app, this TextView would be replaced by an ImageView to show the QR code -->
    </androidx.cardview.widget.CardView>


    <!-- 2. Text Button (Wider, like a text field or action button) -->
    <Button
        android:id="@+id/textButton"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp"
        android:paddingVertical="12dp"
        android:text="Text"
        app:layout_constraintEnd_toStartOf="@+id/shareButton"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qrCodeCard" />


    <!-- 3. Share Button (Smaller) -->
    <Button
        android:id="@+id/shareButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="12dp"
        android:text="Share"
        app:layout_constraintBottom_toBottomOf="@+id/textButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/textButton"
        app:layout_constraintTop_toTopOf="@+id/textButton" />

</androidx.constraintlayout.widget.ConstraintLayout>