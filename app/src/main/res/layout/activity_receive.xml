<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="32dp"
    tools:context=".receiveActivity">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ready to Receive"
        android:textColor="#1A237E"
        android:textSize="32sp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/subtitle_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Choose how you want to connect:"
        android:textColor="#616161"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintTop_toBottomOf="@id/title_text"
        app:layout_constraintBottom_toTopOf="@+id/scan_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/scan_button"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginBottom="32dp"
        android:text="Scan QR Code"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:fontFamily="sans-serif-medium"
        app:cornerRadius="12dp"
        android:backgroundTint="#4CAF50"
        app:icon="@drawable/qr_code"
        app:iconGravity="textStart"
        app:iconPadding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5" /> <TextView
    android:id="@+id/separator_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="OR"
    android:textColor="#9E9E9E"
    android:layout_marginTop="32dp"
    android:layout_marginBottom="16dp"
    app:layout_constraintTop_toBottomOf="@id/scan_button"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/type_text_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Type Sender Identifier"
        app:hintTextColor="@color/gray"
        app:boxStrokeColor="#1A237E"
        app:layout_constraintTop_toBottomOf="@+id/separator_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/go_button">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/type_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapCharacters"
            android:maxLength="8"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/go_button"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Connect"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:fontFamily="sans-serif-medium"
        app:cornerRadius="12dp"
        android:backgroundTint="#1A237E"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/type_text_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/type_text_layout"
        app:layout_constraintTop_toTopOf="@+id/type_text_layout" />


</androidx.constraintlayout.widget.ConstraintLayout>